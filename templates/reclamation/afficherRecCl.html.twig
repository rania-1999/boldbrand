
{% extends '/in.html.twig' %}
{% block content %}


{% endblock %}
{% block banner %}
    <div class=" w-100 vh-100 d-flex justify-content-center align-items-center" >
    <div class="content text-center">
        <div class="glass-panel">
            <h2>objet: {{ rec.obj}}</h2>
            <h2>message: {{ rec.msg }}</h2>
            {% if rec.response==null  %}
                <h2>Réponse: aucune réponse ajoutée</h2>
            {% endif %}
            {% if rec.response!=null  %}

                <h2>Réponse:{{ rec.response }}</h2>
            {% endif %}
